#!/usr/bin/env ruby

require 'bundler/setup'
require 'classroom_automator/script_util'
require 'classroom_automator/task/clone_handouts'


include ClassroomAutomator

usage_message  = "Usage: #{File.basename($0)} ASSIGNMENT-CONF LOCAL-DIR "
opts = ScriptUtil::DefaultOptionParser.new(usage_message).parse(ARGV)
abort usage_message if ARGV.length != 2

ScriptUtil::run_task(
  ScriptUtil::task_with_context_config_assignment_config_and_local_dir(
    Task::CloneHandouts, opts[:context], ARGV[0], ARGV[1]
  )
)
